def value(a,b):
    if a%2==0 and b%2==0:
        return min(a,b)
    else:
        return max(a,b)


def check_word(word):
    word=word.split()
    return sword[0][0] == word[1][0]:


def makes_twenty(a,b):
    return sum(a,b) >= 20:          

 
